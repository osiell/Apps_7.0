            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="CM" version="7.0">
                    <sheet>
                    <group>
                    <group>
                    <field name="name"  />
                    <field name="equipment_id" select="1" colspan="1" />
                    <field name="failure_id" select="1" colspan="1" />
